<%- include("../partials/header"); %>

<div class="container">
    <div class="row">
        <h2 style="text-align:center;">Add New Comment to <%= campground.name %></h2>
        <div style="width:40%; margin:25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="post">
                <div class="form-group">
                    <textarea rows="10" class="form-control" name="comment[text]" placeholder="text"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary" type="submit" name="button">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer"); %>
